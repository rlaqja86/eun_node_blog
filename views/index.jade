extends _layout
block content
  div(id="main")
    a(href="/project/#{object[0].name}")
      div #{object[0].description}
    img(src="/uploads/#{object[1].mainImage}", alt="main image")
  div(id="projects")
    each item in object
      div(data-image="#{item.mainImage}" data-description="#{item.description}")
        a(href="/project/#{item.name}")
          div= item.name
          img(src="/uploads/#{item.thumbnailImage}" alt="thumbnail image")