extends _layout
block content
  div(id="main")
    a(href="/project/#{object[0].name}")
      div #{object[0].description}
    img(src="/uploads/#{object[0].mainImage}", alt="main image")
  div(id="projectWrap")
    div(id="projects" data-latest_image="#{object[0].mainImage}" data-latest_description="#{object[0].description}")
      each item in object
        div(id="project" data-image="#{item.mainImage}" data-description="#{item.description}")
          a(href="/project/#{item.name}")
            div= item.name
            img(src="/uploads/#{item.thumbnailImage}" alt="thumbnail image")
    div(id="pages")
      -for (var i = 1; i < pageTotal+1; i++)
        span(id="page" class="#{i}" data-page="#{i}" date-projectPart="#{projectPart}")= i
        