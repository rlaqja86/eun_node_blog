extends _layout
block content
    script(src="/plugins/fotorama-4.6.4/fotorama.js")
    link(rel="stylesheet" href="/plugins/fotorama-4.6.4/fotorama.css")
    h3= title
    div#slideWrap
        div#slide.fotorama(data-allowfullscreen="true" data-fit="cover" data-keyboard="true" data-nav="thumbs" data-width="100%" data-ratio="16/9" data-max-width="100%")
            each item in object
                img(src="/uploads/#{item.image}" data-caption="#{item.name}<br>#{item.description}<br>#{date}" alt="#{item.name}")