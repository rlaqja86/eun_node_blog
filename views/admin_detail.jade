extends _layout

block content
    div#head.panel-group(aria-multiselectable="true")
        div.panel.panel-primary
            div.panel-heading(role="tab")
                h4.panel-title 프로젝트 관리
            div.panel-body
                div#formgroup(data-value='["default-value"]')
                    div.control
                        label.control-label(for='projectname') 프로젝트명
                        input#image-name(type="text" name='projectname')
                    div    
                        label.control-label(for='description') 설명
                        input#image-description(type="text" name='projectdescription')
                    div       
                        label(for='site',class='control-label') 장소
                        input#image-site(type="text" name='projectsite')
                    div    
                        label(for='date',class='control-label') 날짜
                        input#image-date(type="date" name='projectdate')
                    form#myDrop.dropzone(method='POST' action='/admin/save' enctype='multipart/form-data' name="files")
                    button#sub-image-submit() 제출

block footerScript
    script(src='/scripts/dropzone/dist/dropzone.js')
    script(src='/scripts/jquery/dist/jquery.js')
    script(src='/js/myDropzone.js')
    link(rel="stylesheet" href="/scripts/dropzone/dist/dropzone.css")
    link(rel="stylesheet" href="/scripts/dropzone/dist/basic.css")
    link(rel="stylesheet" href="/bootstrap/css/*") 

